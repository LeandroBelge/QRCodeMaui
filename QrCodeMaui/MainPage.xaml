<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QrCodeMaui.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Image
                Source="qrcode_solid.svg"
                HeightRequest="200"
                HorizontalOptions="Center" />
                
            <Label 
                Text="QRCode Maui"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            
            <Label 
                Text="Cadastro de dados de QRCode"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button 
                x:Name="btnCamera"
                Text="Escanear"
                Clicked="OnCameraClicked"
                HorizontalOptions="Center" />
            <Button 
                x:Name="btnListar"
                Text="Listar"
                Clicked="OnListarClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
